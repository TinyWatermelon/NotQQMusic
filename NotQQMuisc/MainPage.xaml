                    </Grid>
                </PivotItem>
                <PivotItem Header="搜索">
                    <StackPanel>
                        <TextBlock Text="输入你想搜索的歌曲或者歌手"/>
                        <TextBox Name="searchBox" Text="" />
                        <Button Name="searchbutton" Content="搜索" Click="searchbutton_Click" HorizontalAlignment="Right" Width="150" Height="30"/>
                        <ListBox MaxHeight="600" Name="listbox1" SelectionChanged="listbox1_SelectionChanged" />
                    </StackPanel>
                </PivotItem>
                <PivotItem Header="队列">
                    <StackPanel>
                        <TextBlock Text="我的队列"/>
                        <ListView>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </PivotItem>
            </Pivot>
        </Grid>
        <Grid x:Name="PlayerGrid" Grid.Row="1" Background="LightSteelBlue" BorderThickness="10">
            <StackPanel>
                <MediaElement Name="player"/>
                <Slider Name="progressBar"/>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TextBlock Name="progressTimer" Text="0:00/0:00"/>
                        <TextBlock Name="musicDetail" Text="{Binding}" HorizontalAlignment="Center" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button Content="play" Name="play" Click="play_Click" HorizontalAlignment="Stretch">
                            <Button.Background>
                                <ImageBrush Stretch="Fill"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Button Content="stop" Name="stop" Click="stop_Click" HorizontalAlignment="Stretch">
                            <Button.Background>
                                <ImageBrush Stretch="Fill"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
