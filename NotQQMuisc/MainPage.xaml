        <Grid x:Name="PlayerGrid" Grid.Row="1" Background="LightSteelBlue" BorderThickness="10">
            <StackPanel>
                <MediaElement Name="player"/>
                <Slider Name="progressBar"/>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <TextBlock Name="progressTimer" Text="0:00/0:00"/>
                        <TextBlock Name="musicDetail" Text="{Binding}" HorizontalAlignment="Center" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button Content="play" Name="play" Click="play_Click" HorizontalAlignment="Stretch">
                            <Button.Background>
                                <ImageBrush Stretch="Fill"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Button Content="stop" Name="stop" Click="stop_Click" HorizontalAlignment="Stretch">
